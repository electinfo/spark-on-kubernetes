<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>info.elect</groupId>
  <artifactId>spark-hive4-deps</artifactId>
  <version>1.0</version>
  <description>
    Hive 4.x Metastore Client JARs for Spark Operator.
    Use with:
      spark.sql.hive.metastore.version=4.1.0
      spark.sql.hive.metastore.jars=path
      spark.sql.hive.metastore.jars.path=file:///opt/spark/hive4

    IsolatedClientLoader creates a child-first classloader, so we include
    ALL transitive dependencies to match what Maven downloads at runtime.
  </description>
  <dependencies>
    <!-- Hive metastore with ALL dependencies - no exclusions needed because
         IsolatedClientLoader uses an isolated classloader -->
    <dependency>
      <groupId>org.apache.hive</groupId>
      <artifactId>hive-metastore</artifactId>
      <version>4.1.0</version>
    </dependency>

    <!-- hive-exec pulls in additional transitive dependencies -->
    <dependency>
      <groupId>org.apache.hive</groupId>
      <artifactId>hive-exec</artifactId>
      <version>4.1.0</version>
    </dependency>

    <!-- Datanucleus JARs - marked as 'provided' in hive-metastore but needed for JDO persistence -->
    <dependency>
      <groupId>org.datanucleus</groupId>
      <artifactId>datanucleus-core</artifactId>
      <version>6.0.11</version>
    </dependency>
    <dependency>
      <groupId>org.datanucleus</groupId>
      <artifactId>datanucleus-api-jdo</artifactId>
      <version>6.0.5</version>
    </dependency>
    <dependency>
      <groupId>org.datanucleus</groupId>
      <artifactId>datanucleus-rdbms</artifactId>
      <version>6.0.10</version>
    </dependency>
    <dependency>
      <groupId>org.datanucleus</groupId>
      <artifactId>javax.jdo</artifactId>
      <version>3.2.1</version>
    </dependency>

    <!-- Guice - dependency injection, often marked as provided -->
    <dependency>
      <groupId>com.google.inject</groupId>
      <artifactId>guice</artifactId>
      <version>4.2.3</version>
    </dependency>
    <dependency>
      <groupId>com.google.inject.extensions</groupId>
      <artifactId>guice-servlet</artifactId>
      <version>4.2.3</version>
    </dependency>
  </dependencies>
</project>